*, *:before, *:after
	box-sizing inherit
	text-rendering geometricPrecision
	
::selection
	text-shadow none
::-moz-selection
	text-shadow none
	
html
	background-color #fff
	box-sizing border-box
	overflow-y auto
	font-size 16px
	
body
	position relative
	min-height 100vh
	overflow-x hidden
	color #000
	font-size inherit
	
a:hover
	cursor pointer
	
img
	display inline-block
	height auto
	max-width 100%
	
audio, canvas, iframe, img, svg, video
	vertical-align middle
	
textarea
	resize vertical
	
