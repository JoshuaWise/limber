*, *:before, *:after
	box-sizing inherit
	text-rendering geometricPrecision
	
html
	background-color #fff
	box-sizing border-box
	height 100% // ideally, we could remove this, and give body min-height 100vh
	overflow-y auto
	font-size 16px
	
body
	position relative
	min-height 100% // ideally, this would be 100vh
	overflow-x hidden
	color #000
	font-size inherit
	
a:hover
	cursor pointer
	
img
	display inline-block
	height auto
	max-width 100%
	vertical-align middle
	
