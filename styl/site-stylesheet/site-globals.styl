/*==========================*
|        Media Ranges       |
*===========================*/

/**
 * These ranges determine the global breakpoints used for responsive design.
 * NOTE: tablet-range is implicitly between phone-range[1] and desktop-range[0].
 */

phone-range = 320px 768px
desktop-range = 1025px 1920px

/*==========================*
|        Site Colors        |
*===========================*/

/**
 * The variables in this section can be added/removed/renamed/whatever at the
 * user's discretion. They are optional because, by default, they are only used
 * to define the (actually required) options in the 'Color Allocation' section.
 * This section exists out of convenience in your own stylesheets.
 */

color-orange = #e5432a
color-blue = #2aa3e5
color-red = #e52a2a
color-white = #fff
color-black = #333
color-gray = #8e8e8e

/*==========================*
|      Color Allocation     |
*===========================*/

/**
 * This section defines the global colors required by other parts of limber.
 */

primary-color = color-orange
secondary-color = color-blue

success-color = color-blue
failure-color = color-red
disabled-color = color-gray

background-color = color-white
foreground-color = color-black
selection-color = alpha(color-orange, 0.3)

/*==========================*
|       Default Fonts       |
*===========================*/

/**
 * Each of the "base-" options below are used to style text inside p elements,
 * or text that is otherwise not styled.
 */

base-font-family = 'Helvetica Neue', 'Helvetica', sans-serif
base-font-size = 16px
base-font-weight = 400
base-font-style = normal
base-line-height = 1.5
paragraph-margin = 1.25em 0

/**
 * Each of the "heading-" options below can be specified with up to 6 values.
 * These values correspond to the h1, h2, h3, h4, h5, h6 elements, respectively.
 * If less than 6 values are specified, the remaining values default to the last
 * value specified. Unlike other options, these MUST be comma-separated lists.
 * If the values contain commas, those commas must be escaped (\,).
 */

heading-font-family = 'Helvetica Neue'\, 'Helvetica'\, sans-serif
heading-font-size =  4em, 2em, 1.6em, 1.3em, 1.1em, 1em
heading-font-weight = 400
heading-font-style = normal
heading-line-height = 1.3
heading-margin = 1.25em 0

/*==========================*
|           Grid            |
*===========================*/

column-gutter = 30px

