/**
 * Provides background-2x and background-image-2x properties, which are
 * equivalent to their non-2x versions, except that if they contains a url(...)
 * call, an "@2x" version of that URI will be used on retina devices.
 * For example, if you have "url(path/to/file.png)", then make sure you also
 * have "url(path/to/file@2x.png)".
 */
background-2x()
	background arguments
	-background-retina(arguments, -copy-priority(last(arguments)))
	
background-image-2x()
	background-image arguments
	-background-retina(arguments, -copy-priority(last(arguments)))
	
-background-retina(groups, priority)
	if list-separator(groups) == ','
		urls = ()
		push(urls, -get-2x-url(group)) for group in groups
	else
		urls = (null -get-2x-url(groups))
	return unless -contains-url-call(urls)
	@media -background-retina-query
		background-image -convert-to-list(urls) priority
		
if -limber-full == true
	-background-retina-query = retina
else
	-background-retina-query = unquote('(-webkit-min-device-pixel-ratio: 2), (min--moz-device-pixel-ratio: 2), (-o-min-device-pixel-ratio: 2/1), (min-device-pixel-ratio: 2), (min-resolution: 192dpi), (min-resolution: 2dppx), print')
	
